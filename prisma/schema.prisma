// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  recurrent_expense RecurrentExpense? @relation(fields: [recurrent_expense_id], references: [id])
  recurrent_expense_id String? @db.Uuid
  user User? @relation(fields: [user_id], references: [id])
  user_id String?  @db.Uuid
  name  String?
  amount Decimal @db.Decimal(15,2)
  description String?
  day Int
  month Int
  year Int
  is_paid Boolean
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("expenses")
}

model Incomes {
  id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user User? @relation(fields: [user_id], references: [id])
  user_id String?  @db.Uuid
  name  String
  amount Decimal @db.Decimal(15,2)
  description String?
  day Int
  month Int
  year Int
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("incomes")
}

model RecurrentExpense {
  id    String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user User? @relation(fields: [user_id], references: [id])
  user_id String?  @db.Uuid
  expenses Expense[]
  name  String @unique
  amount Decimal @db.Decimal(15,2)
  description String?
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("recurrent_expenses")
}

model User {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  expenses Expense[]
  incomes Incomes[]
  recurrent_expenses RecurrentExpense[]
  sessions Session[]
  name String?
  lastname String?
  email String @unique
  avatar String?
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt 

  @@map("users")
}


model Session {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user User @relation(fields: [user_id], references: [id])
  user_id String @db.Uuid
  user_agent String
  client_ip String
  created_at DateTime @default(now())

  @@map("sessions")
}
