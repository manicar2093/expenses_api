generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Expense {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  recurrent_expense RecurrentExpense @relation(fields: [recurrent_expense_id], references: [id])
  recurrent_expense_id String @db.ObjectId
  name  String
  description String?
  day Int
  month Int
  year Int
  is_recurrent Boolean
  is_paid Boolean
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("expenses")
}

model Incomes {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  description String?
  day Int
  month Int
  year Int
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("incomes")
}

model RecurrentExpense {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String @unique
  amount Float
  description String
  periodicity Int
  last_creation_date DateTime
  expenses Expense[]
  created_at DateTime @default(now())
  updated_at DateTime? @updatedAt

  @@map("recurrent_expenses")
}
